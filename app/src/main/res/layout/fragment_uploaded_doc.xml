<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_header_sec"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <!-- D O C U M E N T   C A T E G O R I E S -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- F I R S T   R O W -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <!-- B I L L S -->
                <android.support.v7.widget.CardView
                    android:id="@+id/bills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp">

                    <!-- C O U N T -->
                    <TextView
                        android:id="@+id/bill_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_white"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="right"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_bills" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Bills"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- M E D I C I N E S -->
                <android.support.v7.widget.CardView
                    android:id="@+id/medicines"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp">

                    <!-- C O U N T -->
                    <TextView
                        android:id="@+id/medicine_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_white"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_med" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Medicine"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- S E C O N D   R O W -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- L A B   R E P O R T S -->
                <android.support.v7.widget.CardView
                    android:id="@+id/lab_reports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp">

                    <!-- C O U N T -->
                    <TextView
                        android:id="@+id/lab_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_white"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_lr" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Lab Reports"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- P R E S C R I P T I O N S -->
                <android.support.v7.widget.CardView
                    android:id="@+id/prescriptions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp">

                    <!-- C O U N T -->
                    <TextView
                        android:id="@+id/prescriptions_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_white"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_pres" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Prescriptions"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- T H I R D   R O W -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <!-- O T H E R S -->
                <android.support.v7.widget.CardView
                    android:id="@+id/others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp"
                    android:layout_gravity="center">

                    <!-- C O U N T -->
                    <TextView
                        android:id="@+id/others_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_white"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="right"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_others" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Others"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- O T H E R S -->
                <android.support.v7.widget.CardView
                    android:visibility="invisible"
                    android:id="@+id/others1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- I C O N -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_others" />

                        <!-- T I T L E -->
                        <com.careons.app.Shared.Components.CustomFields.MonospaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Others"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
